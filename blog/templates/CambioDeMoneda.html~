{% block scripts %}
	<script>
/*valores de conversión con referencia pesos
pesos=1;
euro=9.5;
dolar=8.8;
reales=2.9;
chilenos=0.01;
uruguayos=0.3;
*/
	var valores=[1,9.5,8.8,2.9,0.01,0.3]
		function ejecutar(botoncito) {
            aprieta = botoncito.value;
            val = document.getElementById("conver").value;
		        if (aprieta=="1"||"2"||"3"||"4"||"5"||"6"||"7"||"8"||"9"){
		        	 document.getElementById("conver").value=("value",val+aprieta);
		        }	
        }
/*--------------------------------------------------------------------------------------*/        
        function Limpiar(boton){
        	aprieta = boton.value;
        		if (aprieta=="Limpiar"){
        			document.getElementById("conver").value=("value","");
        			document.getElementById("resultado").value=("value","");        			
        		}
    		}
/*--------------------------------------------------------------------------------------*/
    	function Convertir(btn){
    		aprieta = btn.value;
    		val1 = document.getElementById("conver").value;
    			if(aprieta=="Convertir"){     			
    				var cuadroTxt= parseFloat(document.getElementById("conver").value);
    				
    				var monedaPasada = document.getElementById("combo1").selectedIndex;         	
    				var monedaAPasar = document.getElementById("combo2").selectedIndex;    				
					var resultado1 = (valores[monedaPasada]*cuadroTxt)/valores[monedaAPasar];
					
    				document.getElementById("resultado").value=("value",resultado1);
    				
    			}
    		}
/*--------------------------------------------------------------------------------------*/
    	function Joder(btn1){
    		aprieta=btn1.value;
    		if (aprieta=="Queja"){
 				document.getElementById("Chistoso").style.margin="0px 100px";
 				document.getElementById("Chistoso").value="Si no te gusta";
			}
			if (aprieta=="Si no te gusta"){
				document.getElementById("Chistoso").style.margin="0px -100px";
				document.getElementById("Chistoso").value="Jodete";
			}
			if (aprieta=="Jodete"){
				document.getElementById("Chistoso").style.margin="0px 100px";
				document.getElementById("Chistoso").value="Si no te gusta";
			}
    	}
/*--------------------------------------------------------------------------------------*/
	</script>
{% endblock %}
	
